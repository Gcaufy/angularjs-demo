{{#spritesheet}}
i.icon {
    display: inline-block;
    vertical-align: middle;
    margin-right: 6px;
    background-image: url(../img/{{{escaped_image}}});
  
}
{{/spritesheet}}
{{#sprites}}
i.icon-{{name}} {
    background-position: {{px.offset_x}} {{px.offset_y}};
    width: {{px.width}};
    height: {{px.height}};
}
{{/sprites}}